define(["jquery","common/utils/validationUtils","common/utils/cookieUtils"],function($,validator,cookie){var ToggleSlider=function(options){this.$area=$(options.wrapper);this.$showBtn=$(options.showBtn);this.$closeBtn=$(options.closeBtn);this.closeOtherLayers=options.closeOtherLayers;this.cookieData};ToggleSlider.prototype={init:function(){this.bindEvents();return this},bindEvents:function(){this.$showBtn.on("click",$.proxy(function(e){e.preventDefault();this.show()},this));this.$closeBtn.on("click",
$.proxy(function(e){e.preventDefault();this.hide()},this))},show:function(){this.hideOtherTopBanners();this.$area.slideDown()},hideOtherTopBanners:function(){if(validator.isNotEmpty(this.closeOtherLayers))$(this.closeOtherLayers).each(function(){$(this).hide()})},hide:function(){this.$area.slideUp();if(validator.isNotEmpty(this.cookieData))cookie.setCookie(this.cookieData.key,this.cookieData.value,this.cookieData.expiryTime)},setCookieData:function(optionData){this.cookieData=optionData}};return ToggleSlider});